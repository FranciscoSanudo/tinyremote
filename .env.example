# Example environment variables for tinyremote
# Copy to .env and edit as needed

# Projects directory on the host to mount into the container
PROJECTS_DIR=./projects

# VNC configuration
VNC_PORT=5901
DISPLAY=:1
SCREEN_RESOLUTION=1920x1080
SCREEN_DEPTH=24
# Optional: set a VNC password to enable authentication
# VNC_PASSWORD=yourpassword

# Monitoring / other
BASE_URL=http://localhost:3005
INTERVAL=60
ENDPOINTS_FILE=./monitoring/health_endpoints.json
LOG_FILE=./monitoring/monitor.log

# Health check interval used by entrypoint
HEALTH_INTERVAL=30
